<h3>Dashboard</h3>
<h5>Welcome {{name}}</h5>
<p>Here are your stories</p>
{{#if stories}}
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        <tr/>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/edit/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td><a href="/stories/edit/{{_id}} " class="btn btn-float">
            <i class="fas fa-edit"></i>
            </a>
            <form method="POST" action="/stories/{{_id}}" id="delete-form">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn red">
                <i class="fas fa-trash"></i>
            </button>
            </form>

        </td>
        {{/each}}
        </tr>
    </tbody>
</table>
{{else}}
<p>you have not created any stories</p>
{{/if}}